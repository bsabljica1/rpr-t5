<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="5" vgap="5" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    <stylesheets>
        <URL value="@izgled.css" />
    </stylesheets>
    <children>

                <Button fx:id="modul" maxHeight="Infinity" maxWidth="Infinity" onAction="#Operacije" text="\%" GridPane.rowIndex="1" />

                <Button fx:id="btn1" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="1" GridPane.columnIndex="0" GridPane.rowIndex="4" />

                <Button fx:id="btn2" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Button fx:id="btn3" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" />

                <Button fx:id="btn4" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="4" GridPane.rowIndex="3" />

                <Button fx:id="btn5" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Button fx:id="btn6" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="6" GridPane.columnIndex="2" GridPane.rowIndex="3" />

                <Button fx:id="btn7" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="7" GridPane.rowIndex="2" />

                <Button fx:id="btn8" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Button fx:id="btn9" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />

                <Button fx:id="kroz" maxHeight="Infinity" maxWidth="Infinity" onAction="#Operacije" text="/" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Button fx:id="puta" maxHeight="Infinity" maxWidth="Infinity" onAction="#Operacije" text="x" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                <Button fx:id="minus" maxHeight="Infinity" maxWidth="Infinity" onAction="#Operacije" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Button fx:id="plusBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#Operacije" text="+" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.rowSpan="2" />

                <Button fx:id="equalsBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#Operacije" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.rowSpan="2" />

                <Button fx:id="tacka" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="." GridPane.columnIndex="2" GridPane.rowIndex="5" />

                <Button fx:id="btn0" maxHeight="Infinity" maxWidth="Infinity" onAction="#Brojevi" text="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />

                <Label fx:id="display" maxHeight="Infinity" maxWidth="Infinity" GridPane.columnSpan="4" />

            </children>
</GridPane>
