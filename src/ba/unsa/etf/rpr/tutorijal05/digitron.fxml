<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="5" vgap="5" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.tutorijal05.Controller">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
        <RowConstraints vgrow="ALWAYS" />
    </rowConstraints>
    <stylesheets>
        <URL value="@izgled.css" />
    </stylesheets>
    <children>

                <Button fx:id="modulBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#modulBtn" text="\%" GridPane.rowIndex="1" />

                <Button fx:id="btn1" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn1" text="1" GridPane.columnIndex="0" GridPane.rowIndex="4" />

                <Button fx:id="btn2" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn2" text="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Button fx:id="btn3" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn3" text="3" GridPane.columnIndex="2" GridPane.rowIndex="4" />

                <Button fx:id="btn4" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn4" text="4" GridPane.rowIndex="3" />

                <Button fx:id="btn5" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn5" text="5" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Button fx:id="btn6" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn6" text="6" GridPane.columnIndex="2" GridPane.rowIndex="3" />

                <Button fx:id="btn7" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn7" text="7" GridPane.rowIndex="2" />

                <Button fx:id="btn8" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn8" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Button fx:id="btn9" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn9" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />

                <Button fx:id="divideBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#divideBtn" text="/" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Button fx:id="multiplyBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#multiplyBtn" text="x" GridPane.columnIndex="2" GridPane.rowIndex="1" />

                <Button fx:id="minusBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#minusBtn" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1" />

                <Button fx:id="plusBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#plusBtn" text="+" GridPane.columnIndex="3" GridPane.rowIndex="2" GridPane.rowSpan="2" />

                <Button fx:id="equalsBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#equals" text="=" GridPane.columnIndex="3" GridPane.rowIndex="4" GridPane.rowSpan="2" />

                <Button fx:id="dotBtn" maxHeight="Infinity" maxWidth="Infinity" onAction="#dotBtn" text="." GridPane.columnIndex="2" GridPane.rowIndex="5" />

                <Button fx:id="btn0" maxHeight="Infinity" maxWidth="Infinity" onAction="#btn0" text="0" GridPane.columnSpan="2" GridPane.rowIndex="5" />

                <Label fx:id="display" text="${controller.rezultat}"  maxHeight="Infinity" maxWidth="Infinity" GridPane.columnSpan="4" />

            </children>
</GridPane>
